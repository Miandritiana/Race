@{
    ViewData["Title"] = "Penalite";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Race/</span> Penalite</h4>
                <div class="row mb-5">
            <div class="col-md-6"> </div>
            <div class="col-md-6">
                <form action="@Url.Action("Index", "Admin")" method="get">
                    <button type="submit"  class="btn btn-dark" style="float:right;">Return to List</button>
                </form>
            </div>
        </div>

        <form method="post" action="@Url.Action("ImportEtapeResult", "Admin")">
            <div class="row mb-5">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header"><h4>Liste Etape</h4></div>
                            <div class="card-body">
                                <div class="table-responsive text-nowrap">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                            <th>Etape</th>
                                            <th>Equipe</th>
                                            <th>Temps pénalité</th>
                                            <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-border-bottom-0">
                                            @foreach(var d in Model.penaliteList)
                                            {
                                                <tr>
                                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@d.etape</strong></td>
                                                    <td>@d.equipe</td>
                                                    <td>@d.tempsplenalite</td>
                                                    @* <form action="@Url.Action("deletePenaltie", "Admin")" method="post"> *@
                                                        <input type="hidden" name="idEtape" value="@d.idEtape">
                                                        <td><button type="submit" class="btn btn-danger">Temps</button></td>
                                                    @* </form> *@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>