@{
    ViewData["Title"] = "Classement";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Race /</span> Classement</h4>

        <div class="row mb-5">
            <div class="col-6">
                <div class="card-header"><h3>Classement général  par équipe</h3></div>
                <div class="card">
                    <div class="table-responsive text-nowrap mt-2">
                        <table class="table table-borderless">
                            <thead>
                            <tr>
                                <th>Rang</th>
                                <th>Equipe</th>
                                <th>Points</th>
                            </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach(var r in Model.CG)
                                {
                                    <tr>
                                        <td>@r.rang</td>
                                        <td>@r.equipe</td>
                                        <td style="text-align: right;">@r.point</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="card">                
                <div class="card-body">
                        <form action="@Url.Action("affecte", "Admin")" method="post">
                        <div class="row">
                            <div class="col-5">
                                <label for="emailWithTitle" class="form-label">Categorie</label>
                                <select name="genre" class="form-select">
                                    @foreach(var e in Model.equipeList)
                                    {
                                    <option value="@e.idUser">@e.name</option>
                                    }
                                </select>
                            </div>
                            </div>


                                <div class="col-7 mb-4">

                                    <div class="table-responsive text-nowrap">
                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th>Rang</th>
                                            <th>Equipe</th>
                                            <th>Point</th>
                                        </tr>
                                        </thead>
                                        <tbody class="table-border-bottom-0">
                                            @foreach(var c in Model.coureurList)
                                            {
                                                <tr>
                                                    <input type="hidden" name="idEtapeCoureur" value="@c.idEtapeCoureur"/>
                                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@c.nom</strong> dans @c.equipe</td>
                                                    <td><input type="datetime-local" class="form-control" step="1" name="dhArriver" required/></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    </div>
                                </div>                               

                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>

                        </div>
                        </form>
                </div>
            </div>
            
        </div>
        

        <div class="row mb-5">
            <div class="col-6">
                <div class="card-header"><h3>Les points pour chaque étape</h3></div>
                <div class="card">
                    <div class="table-responsive text-nowrap mt-2">
                        <table class="table table-borderless">
                            <thead>
                            <tr>
                                <th>Etape</th>
                                <th>Coureur</th>
                                <th>Point</th>
                            </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach(var r in Model.CGPointEtape)
                                {
                                    <tr>
                                        <td>@r.etape</td>
                                        <td>@r.coureur</td>
                                        <td style="text-align: right;">@r.point</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="card-header"><h3>Classement général par coureur</h3></div>
                <div class="card">
                    <div class="table-responsive text-nowrap mt-2">
                        <table class="table table-borderless">
                            <thead>
                            <tr>
                                <th>Numero dossard</th>
                                <th>Nom</th>
                                <th>Points</th>
                            </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach(var r in Model.CGCoureur)
                                {
                                    <tr>
                                        <td>@r.numDossard</td>
                                        <td>@r.coureur</td>
                                        <td style="text-align: right;">@r.point</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="card">
                <div class="table-responsive text-nowrap mt-2">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>Temps ID</th>
                        <th>Etape ID</th>
                        <th>Equipe</th>
                        <th>Numéro</th>
                        <th>Coureur</th>
                        <th>Genre</th>
                        <th>Heure de Départ</th>
                        <th>Heure d'Arrivée</th>
                        <th>Temps</th>
                        <th>Point</th>
                        <th>Rang</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach(var r in Model.resultList)
                        {
                            <tr>
                                <td>@r.idECTemps</td>
                                <td>@r.idEtape</td>
                                <td>@r.equipe</td>
                                <td style="text-align: right;">@r.numDossard</td>
                                <td>@r.coureur</td>
                                <td>@r.genre</td>
                                <td>@r.hDepart</td>
                                <td>@r.hArriver</td>
                                <td>@r.temps</td>
                                <td style="text-align: right;">@r.point</td>
                                <td>@r.rang</td>
                            </tr>
                        }
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            
        </div>
        
    </div>
</div>
