@{
    ViewData["Title"] = "Homepage";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Race /</span> Affecter coureur</h4>

        <div class="row mb-5">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <form action="@Url.Action("listeEtape", "Home")" method="get">
                    <button type="submit"  class="btn btn-dark" style="float:right;">Return to List</button>
                </form>
            </div>
        </div>

        <div class="row mb-5">
            <div class="card">

        <div class="row">
            <div class="col-md-6">
                <h2></h2>
                @if(ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                }
            </div>
        </div>
                
                <div class="card-body">
                            <form action="@Url.Action("affecte", "Home")" method="post">
                        <div class="row">
                            <div class="col-6">
                                <div class="demo-inline-spacing mt-3">
                                <div class="list-group">
                                <a
                                    href="javascript:void(0);"
                                    class="list-group-item list-group-item-action flex-column align-items-start"
                                >
                                    <div class="d-flex justify-content-between w-100">
                                    <h6>@Model.etape.name</h6>
                                    <small>@Model.etape.lkm km</small>
                                    </div>
                                    <p class="mb-1">Nombre coureur : @Model.etape.nbCoureur
                                    </p>
                                    <small>Rang etape : @Model.etape.rangEtape</small>
                                    <p>Date heure depart <strong>@Model.etape.dhDepart.ToString("MMMM dd, yyyy hh:mm:ss tt")</strong></p>
                                </a>
                                </div>
                            </div>
                            </div>


                                <div class="col-6 mb-4">
                                    <div class="demo-inline-spacing mt-3">
                                        <div class="list-group">
                                        @foreach(var c in Model.coureurList)
                                        {
                                            <label class="list-group-item">
                                                <input class="form-check-input me-1" type="checkbox" name="coureurs" value="@c.idCoureur"/>
                                                @c.nom (@c.numDossard)
                                            </label>
                                        }

                                        </div>
                                    </div>
                                </div>
                                
                                                <input type="hidden" name="idEtape" value="@Model.etape.idEtape"/>
                                                <input type="hidden" name="limit" value="@Model.etape.nbCoureur"/>

                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>

                        </div>
                            </form>
                </div>
            </div>
            
        </div>

    </div>
</div>

